<% $sumbit_text = "Submit Changes" %>

<div class="vendors col-sm-12">

  <ol class="breadcrumb row">
    <li><%= link_to "All Vendors", "/" %></li>
    <li class="active">Edit Vendor</li>
  </ol>

  <%= render :partial => 'vendor_alert' %>

  <!-- show popup with a button -->
  <button type = "button" class = "btn btn-danger pull-right" data-toggle = "modal" data-target = "#remove_modal">Remove Vendor</button>

  <!-- popup for removing vendors  -->
  <div id = "remove_modal" class = "modal fade" role = "dialog">
    <div class = "modal-dialog">
      <div class = "modal-content">
        <div class = "modal-header">
          <button type = "button" class = "close" data-dismiss = "modal">&times;</button>
          <h4 class = "modal-title">Warning</h4>
        </div>
        <div class = "modal-body">
          <p>Removing a vendor will also delete all associated products, tests, and points of contact.</p>
          <p>Enter the vendor name <strong id = "vendor_name_popup"><%= @vendor.name %></strong> to delete vendor.</p>
          <p><input id = "text_field_popup" type = "text-field" class = "form-control" placeholder = "Vendor Name"/></p>
        </div>
        <div class = "modal-footer">
          <%= button_to "Remove Vendor", @vendor, :method => "delete", :class => "btn btn-danger pull-right", :disabled => true, :id => "remove_vendor_popup" %>
          <button type = "button" class = "btn btn-default pull-right" data-dismiss = "modal">Close</button>
        </div>
      </div>

    </div>
  </div>

  <%= render :partial => 'vendor_form' %>

</div>