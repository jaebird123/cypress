<div class="vendors col-sm-12">

  <ol class="breadcrumb row">
    <li><a href = "/vendors/index">All Vendors</a></li>
    <li class="active">Add Vendor</li>
  </ol>

  <form id = "add_vendor_form" class = "form-horizontal" role = "form">

  	<h1>Vendor Information</h1>

  	<div class = "form-group">
  		<label class = "control-label col-sm-2" for = "vendor_name">Vendor Name</label>
  		<div class="col-sm-10">
  			<input class = "form-control" type = "text" id = "vendor_name" placeholder = "Name" required><div class = "required-field-label" >* required</div>
  		</div>
  	</div>
  	<div class = "form-group">
  		<label class = "control-label col-sm-2" for = "vendor_id">Vendor ID</label>
  		<div class = "col-sm-10">
  			<input class = "form-control" type = "text" id = "vendor_id" placeholder = "ID">
  		</div>
  	</div>
  	<div class = "form-group">
  		<label class = "control-label col-sm-2" for = "website_url">Website URL</label>
  		<div class = "col-sm-10">
  			<input class = "form-control" type = "text" id = "website_url" placeholder = "www.example.com">
  		</div>
  	</div>
  	<div class = "form-group">
  		<label class = "control-label col-sm-2" for = "address">Address</label>
  		<div class = "col-sm-10">
  			<input class = "form-control" type = "text" id = "address" placeholder = "123 Example Lane">
  		</div>
  	</div>
  	<div class = "form-group">
  		<label class = "control-label col-sm-2" for = "state">State</label>
  		<div class = "col-sm-10">
  			<input class = "form-control" type = "text" id = "state" placeholder = "China">
  		</div>
  	</div>
  	<div class = "form-group">
  		<label class = "control-label col-sm-2" for = "zipcode">Zipcode</label>
  		<div class = "col-sm-10">
  			<input class = "form-control" type = "text" id = "zipcode" placeholder = "123456">
  		</div>
  	</div>

  	<h1>Point of Contact Information</h1>

  	<div class="form-group poc-group">
        <!-- <label class="col-xs-2 control-label">POC</label> -->
        <div class="col-xs-3">
            <input type = "text" class = "form-control" name = "poc[0].name" placeholder = "Name" />
        </div>
        <div class="col-xs-3">
            <input type = "text" class = "form-control" name = "poc[0].contact_type" placeholder = "Contact Type" />
        </div>
        <div class="col-xs-3">
            <input type = "text" class = "form-control" name = "poc[0].email" placeholder = "Email" />
        </div>
        <div class="col-xs-3">
            <input type="text" class="form-control" name="poc[0].phone_number" placeholder="Phone Number" />
        </div>
    </div>

    <div class="form-group poc-group hide" id = "poc_template">
        <div class="col-xs-3">
            <input type = "text" class = "form-control" name = "name" placeholder = "Name" />
        </div>
        <div class="col-xs-3">
            <input type = "text" class = "form-control" name = "contact_type" placeholder = "Contact Type" />
        </div>
        <div class="col-xs-3">
            <input type = "text" class = "form-control" name = "email" placeholder = "Email" />
        </div>
        <div class="col-xs-2">
            <input type="text" class="form-control" name="phone_number" placeholder="Phone Number" />
        </div>
        <div class="col-xs-1">
            <button type="button" class="btn btn-default remove_button">- Remove</button>
        </div>
    </div>

    <div class = "form-group poc-group">
      <div class="col-xs-1">
          <button type="button" class="btn btn-default add_button">+ Add Contact</button>
      </div>
    </div>

    <div id = "submit_or_cancel_buttons">
      <button class="btn btn-default pull-left">Cancel</button>
      <button class="btn btn-primary pull-left">Submit</button>
    </div>

  </form>

</div>