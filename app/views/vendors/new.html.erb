<div class="vendors col-sm-12">

  <ol class="breadcrumb row">
    <li><%= link_to "All Vendors", "/" %></li>
    <li class="active">Add Vendor</li>
  </ol>

  <%= form_for @vendor, html: {class: "form-horizontal", id: "add_vendor_form"} do |f| %>

    <h1>Vendor Information</h1>

    <div class = "form-group">
      <%= f.label :name, 'Vendor Name', :class => "control-label col-sm-2" %>
      <div class = "col-sm-4">
        <%= f.text_field :name, :class => "form-control", :placeholder => 'Name', :required => true %>
      </div>
      <div class = "required-field-label col-sm-1" >* required</div>
    </div>
    <div class = "form-group">
      <%= f.label :vendor_id, 'Vendor ID', :class => "control-label col-sm-2" %>
      <div class = "col-sm-4">
        <%= f.text_field :vendor_id, :class => "form-control", :placeholder => 'ID' %>
      </div>
    </div>
    <div class = "form-group">
      <%= f.label :url, 'URL', :class => "control-label col-sm-2" %>
      <div class = "col-sm-4">
        <%= f.text_field :url, :class => "form-control", :placeholder => 'www.example.com' %>
      </div>
    </div>
    <div class = "form-group">
      <%= f.label :address, 'Address', :class => "control-label col-sm-2" %>
      <div class = "col-sm-4">
        <%= f.text_field :address, :class => "form-control", :placeholder => '123 Example Lane' %>
      </div>
    </div>
    <div class = "form-group">
      <%= f.label :state, 'State', :class => "control-label col-sm-2" %>
      <div class = "col-sm-4">
        <%= f.text_field :state, :class => "form-control", :placeholder => 'Alabama' %>
      </div>
    </div>
    <div class = "form-group">
      <%= f.label :zip, 'Zip Code', :class => "control-label col-sm-2" %>
      <div class = "col-sm-4">
        <%= f.text_field :zip, :class => "form-control", :placeholder => '112233' %>
      </div>
    </div>

    <h1>Point of Contact Information</h1>

    <% poc = [] %>

    <div id = "poc_labels" class = "form-group">
      <div class = "col-xs-2">
        Name
      </div>
      <div class = "col-xs-4">
        Email
      </div>
      <div class = "col-xs-2">
        Phone Number
      </div>
      <div class = "col-xs-2">
        Contact Type
      </div>
    </div>

    <div class="form-group poc-group">
        <div class="col-xs-2">
            <input type = "text" class = "form-control" name = "vendor[poc][0].name" placeholder = "John Doe" />
        </div>
        <div class="col-xs-4">
            <input type = "text" class = "form-control" name = "vendor[poc][0].email" placeholder = "contact@example.com" />
        </div>
        <div class="col-xs-2">
            <input type = "text" class = "form-control" name = "vendor[poc][0].phone_number" placeholder = "1(222)333-4444" />
        </div>
        <div class="col-xs-2">
            <input type = "text" class = "form-control" name = "vendor[poc][0].contact_type" placeholder = "Admin, Sales" />
        </div>
    </div>

    <div class="form-group poc-group hide" id = "poc_template">
        <div class="col-xs-2">
            <input type = "text" class = "form-control" name = "name" placeholder = "John Doe" />
        </div>
        <div class="col-xs-4">
            <input type = "text" class = "form-control" name = "email" placeholder = "contact@example.com" />
        </div>
        <div class="col-xs-2">
            <input type = "text" class = "form-control" name = "phone_number" placeholder = "1(222)333-4444" />
        </div>
        <div class="col-xs-2">
            <input type = "text" class = "form-control" name = "contact_type" placeholder = "Admin, Sales, etc." />
        </div>
        <div class="col-xs-1">
            <button type = "button" class = "btn btn-default remove_button">- Remove</button>
        </div>
    </div>

    <div class = "form-group poc-group">
      <div class="col-xs-2">
          <button type = "button" class = "btn btn-default add_button">+ Add Contact</button>
      </div>
    </div>

    <div class = "form-group" id = "submit_and_cancel">
      <div class = "col-sm-2"></div>
      <div class = "col-sm-1">
        <%= button_to "Cancel", "/", :method => :get, :class => "btn btn-default" %>
      </div>
      <div class = "col-sm-2">
        <button class = "btn btn-primary" id = "submit_button">Create Vendor</button>
      </div>
    </div>

  <% end %>

