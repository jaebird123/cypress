      <thead>
        <tr>
          <th class = "col-sm-1">Status</th>
          <th class = "col-sm-3">Vendor</th>
          <th class = "col-sm-2">Passing Products</th>
          <th class = "col-sm-2">Failing Products</th>
          <th class = "col-sm-2">Incomplete Products</th>
          <th class = "col-sm-2">Total Products</th>
          <td></td>
        </tr>
      </thead>
      <tbody>
        <% @vendors.each do |vendor| %>
          <tr>
            <td>
              <% if vendor.passing_products == vendor.total_products %>
                <%= image_tag('checkmark.svg') %>
              <% else %>
                <%= image_tag('errormark.svg') %>
              <% end %>
            </td>
            <td><%= link_to vendor.name, vendors_path(vendor) %></td>
            <td><%= vendor.passing_products     %></td>
            <td><%= vendor.failing_products     %></td>
            <td><%= vendor.incomplete_products  %></td>
            <td><%= vendor.total_products       %></td>
            <td><%= button_to "Edit Vendor", edit_vendor_path(vendor), :method => :get, :class => "btn btn-xs btn-default pull-right" %></td>
          </tr>
        <% end %>
