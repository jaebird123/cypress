<div class="vendors col-sm-12">

  <ol class="breadcrumb row">
    <li class="active">Dashboard</li>
  </ol>

  <% if flash[:notice] && flash[:notice_type] %>
    <div class = "<%= 'alert alert-' + flash[:notice_type] %>" >
      <%= flash[:notice] %>
      <a href = "#" class = "close" data-dismiss = "alert" aria-label = "close">&times;</a>
    </div>
  <% end %>

  <%= button_to "+ Add Vendor", new_vendor_path, :method => :get, :class => "btn btn-primary pull-left" %>
  <button class="btn btn-primary pull-right">View All Patients</button>

  <section>
